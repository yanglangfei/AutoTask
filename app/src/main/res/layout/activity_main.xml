<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_local_florist_black_24dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchModel"
        android:text="模式贴换"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copyBtn"
            android:text="COPY"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parseBtn"
            android:text="PARSE"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copyIntentBtn"
            android:text="COPYIntent"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parseIntentBtn"
            android:text="PARSEIntent"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="21sp"
            android:textStyle="bold"
            android:id="@+id/parseBody"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="text"

            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>
